<div class="container">
    <div id="burgerHead" class="container">
        <h1> Its Burger Time are you ready??? </h1>
        <br>
    </div>
    <div class="row">
        <div class="col-md-2">
            <div id="toEat" class="col-md-4">
                <h2>To Eat!</h2>
                <ul class="list-group list-group-flush">
                    {{#each burgers}}
                    {{#unless devoured}}
                    <li class="list-group-item">
                        {{burger_name}}

                        <button class="change-devour" data-id="{{id}}">Eat Me!</button>
                    </li>
                    {{/unless}}
                    {{/each}}
                </ul>
            </div>
        </div>
        <div id="done" class="col-md-4">
            <h3>Done!</h3>
            <ul class="list-group list-group-flush">
                {{#each burgers}}
                {{#if devoured}}
                <li class="list-group-item">
                    {{burger_name}}

                    <button class="delete-burger" data-id="{{id}}">Send it back!</button>
                </li> {{/if}}
                {{/each}}
            </ul>
        </div>
        <div class="col-md-2"></div>
    </div>


    <div class="row">
        <div id="addBurg" class="col-med-12">

            <h2>What would you like to order?</h2>
          <form class="create-form">

                <div class="form-group">
                    <label for="bn">Burger:</label>
                    <input type="text" id="bn" name="name">
                </div>

                <button type="submit"> Submit Order</button>
            </form>

        </div>
    </div>
</div>